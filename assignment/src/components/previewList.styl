
@import '../common/constants';
@import '../common/mixins';


.previewList {
    borderMixIn(4px);
    display: block;
    position: relative;
    padding: 15px 5px;
    text-align: left;
    
    &__title {
        titleHeight = 30px;
        oneLineBlockMixIn(titleHeight);
        display: inline-block;
        position: absolute;
        top: -(titleHeight/2); left: 35px;
        background: lightGrey;
        color: white;
        padding: 0 10px;
        font-size: 20px;
    }
}

.previewItem {
    borderMixIn(4px);
    display: inline-block;
    overflow: hidden;
    cursor: pointer;
    margin: 5px;
    
    &--active {
        //
    }
    &--dragging {
        //
    }
}
